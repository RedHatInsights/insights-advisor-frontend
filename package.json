{
  "name": "advisor-frontend",
  "version": "2.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/RedHatInsights/insights-advisor-frontend.git"
  },
  "license": "Apache-2.0",
  "author": "Red Hat",
  "scripts": {
    "analyze": "NODE_ENV=production webpack --config config/dev.webpack.config.js --env analyze=true --mode production",
    "build": "webpack --config config/prod.webpack.config.js",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint config src",
    "lint:js:fix": "eslint config src --fix",
    "lint:sass": "stylelint 'src/**/*.scss' --config .stylelintrc.json",
    "nightly": "npm run travis:verify",
    "prod": "NODE_ENV=production webpack serve --config config/dev.webpack.config.js",
    "server:ctr": "node src/server/generateServerKey.js",
    "start:beta": "NODE_ENV=development PROXY=true BETA=true webpack serve --config config/dev.webpack.config.js",
    "start": "NODE_ENV=development webpack serve --config config/dev.webpack.config.js",
    "start:proxy": "NODE_ENV=development PROXY=true webpack serve --config config/dev.webpack.config.js",
    "start:proxy:beta": "BETA=true NODE_ENV=development PROXY=true webpack serve --config config/dev.webpack.config.js",
    "test": "npm run test:jest",
    "test:local": "TZ=UTC jest --verbose --collectCoverage=false --passWithNoTests --env=jsdom",
    "test:jest": "TZ=UTC jest --verbose --passWithNoTests --env=jsdom",
    "test:ct": "BABEL_ENV=component cypress run --component",
    "test:openct": "cypress open --component",
    "translations": "npm-run-all translations:*",
    "translations:extract": "npx formatjs extract ./src/*.js --out-file ./build/messages/src/Messages.json",
    "translations:compile": "npx formatjs compile ./build/messages/src/Messages.json --out-file ./locales/translations.json",
    "translations:datafile": "node scripts/createDataJson.js",
    "travis:build": "NODE_ENV=production webpack --config config/prod.webpack.config.js",
    "travis:verify": "npm-run-all travis:build lint",
    "verify": "npm-run-all build lint test",
    "verify:local": "npm-run-all build lint test:local test:ct",
    "coverage:clean": "rm -rf .nyc_output coverage reports",
    "coverage": "bash coverage.sh && npm run coverage:clean"
  },
  "sassIncludes": {
    "patternfly": "node_modules/patternfly/dist/sass"
  },
  "jest": {
    "coverageDirectory": "./jest-coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/stories/*"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.+fixtures.+"
    ]
  },
  "dependencies": {
    "@babel/runtime": "7.15.4",
    "@patternfly/patternfly": "5.0.2",
    "@patternfly/react-charts": "^6.94.18",
    "@patternfly/react-core": "^5.0.1",
    "@patternfly/react-icons": "^5.0.1",
    "@patternfly/react-table": "^5.0.1",
    "@patternfly/react-tokens": "^4.94.6",
    "@react-pdf/renderer": "3.1.12",
    "@redhat-cloud-services/frontend-components": "^4.0.9",
    "@redhat-cloud-services/frontend-components-advisor-components": "^1.0.17",
    "@redhat-cloud-services/frontend-components-notifications": "^4.0.4",
    "@redhat-cloud-services/frontend-components-pdf-generator": "^2.6.16",
    "@redhat-cloud-services/frontend-components-remediations": "3.2.7",
    "@redhat-cloud-services/frontend-components-translations": "3.2.3",
    "@redhat-cloud-services/frontend-components-utilities": "^4.0.2",
    "@reduxjs/toolkit": "1.9.5",
    "@scalprum/react-core": "^0.1.9",
    "@testing-library/react": "^14.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "classnames": "2.3.1",
    "dot": "1.1.3",
    "marked": "4.0.10",
    "package-lock-only": "^0.0.4",
    "react": "18.2.0",
    "react-content-loader": "6.2.0",
    "react-dom": "18.2.0",
    "react-intl": "^6.4.7",
    "react-markdown": "7.0.1",
    "react-redux": "8.1.2",
    "react-router-dom": "^6.6.1",
    "redux": "4.2.1",
    "redux-logger": "3.0.6",
    "redux-promise-middleware": "6.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-decorators": "7.15.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-async-to-generator": "7.14.5",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "7.15.4",
    "@babel/preset-flow": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/webpack-dev-server": "^2.0.0",
    "@formatjs/cli": "4.2.33",
    "@redhat-cloud-services/eslint-config-redhat-cloud-services": "1.2.1",
    "@redhat-cloud-services/frontend-components-config": "^5.0.2",
    "axios": "0.21.4",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.1.1",
    "babel-loader": "8.3.0",
    "babel-plugin-dual-import": "1.2.1",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-lodash": "3.3.4",
    "commander": "8.1.0",
    "copy-webpack-plugin": "9.0.1",
    "cypress": "^13.2.0",
    "eslint": "7.32.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "glob": "7.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.1.1",
    "lodash": "4.17.21",
    "npm-run-all": "4.1.5",
    "prop-types": "15.7.2",
    "qs": "^6.11.2",
    "rehype-raw": "6.1.0",
    "rehype-sanitize": "5.0.0",
    "style-loader": "^3.3.1",
    "stylelint": "13.13.1",
    "stylelint-config-recommended-scss": "4.3.0",
    "stylelint-scss": "3.20.1",
    "typescript": "5.2.2",
    "webpack": "^5.76.0",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "^4.4.0"
  },
  "insights": {
    "appname": "advisor"
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/*.spec.ct.js",
      "src/**/*.test.js",
      "src/**/*.cy.js"
    ]
  }
}
